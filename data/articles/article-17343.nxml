          </list-item>
          <list-item>
            <p>Aspiration</p>
          </list-item>
          <list-item>
            <p>Bacterial pneumonia</p>
          </list-item>
          <list-item>
            <p>Malabsorption</p>
          </list-item>
          <list-item>
            <p>Sexually transmitted infections</p>
          </list-item>
          <list-item>
            <p>Wernicke-Korsakoff syndrome</p>
          </list-item>
          <list-item>
            <p>Neuropathy</p>
          </list-item>
          <list-item>
            <p>Dementia</p>
          </list-item>
          <list-item>
            <p>Hypothyroidism</p>
          </list-item>
